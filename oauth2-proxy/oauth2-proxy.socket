[Unit]
Description=OAuth2 Proxy Socket

[Socket]
RuntimeDirectory=/ar/run/oauth2-proxy
ListenStream=/var/run/oauth2-proxy/oauth2-proxy.sock
SocketUser=www-data
SocketGroup=www-data
SocketMode=0660

[Service]
ExecStartPre=/usr/bin/mkdir -p /var/run/my_service
ExecStartPre=/usr/bin/chmod 0755 /var/run/my_service

[Install]
WantedBy=sockets.target
